<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_gravity="fill"
        android:padding="10dp"

        android:src="@drawable/loading_icon"
        android:id="@+id/artistImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/img" />


    <TextView
        android:layout_gravity="fill"
        android:layout_toEndOf="@+id/artistImage"
        android:layout_alignTop="@+id/artistImage"

        android:id="@+id/artistName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="24sp"
        android:textColor="#000"
        />
    <TextView
        android:layout_gravity="fill"
        android:layout_alignStart="@+id/artistName"
        android:layout_below="@+id/artistName"

        android:id="@+id/artistGenresTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20sp"/>

    <TextView
        android:id="@+id/artistAlb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/artistName"
        android:layout_alignBottom="@+id/artistImage"

        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#b7b7b7"
        />
    <TextView
        android:id="@+id/artistSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#b7b7b7"

        android:layout_toEndOf="@+id/artistAlb"
        android:layout_alignBottom="@+id/artistImage"
        />
</RelativeLayout>