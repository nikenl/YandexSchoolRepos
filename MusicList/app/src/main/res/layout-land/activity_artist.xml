<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="horizontal"
    tools:context="ru.nikenl.foryandexschool.musiclist.musiclist.ArtistActivity">
    <ImageView
        android:id="@+id/artistImage"

        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/img" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context=".ArtistActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/artistGenresTags"

                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"

                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#b7b7b7"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"   />
                <LinearLayout
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/artistAlb"

                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#b7b7b7"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                    <TextView
                        android:id="@+id/artistSongs"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#b7b7b7"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
                <TextView
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"

                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="#000"

                    android:text="@string/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    />
                <TextView
                    android:id="@+id/artistDescr"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="#000"
                    />
        </LinearLayout>
    </ScrollView>
</LinearLayout>